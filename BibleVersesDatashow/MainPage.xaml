<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BibleVersesDatashow.MainPage"
             xmlns:viewmodel="clr-namespace:BibleVersesDatashow.ViewModel"
             x:DataType="viewmodel:MainViewModel">
    <ContentPage.Resources>
        <Style 
            x:Key="FontPreview"
            TargetType="Label">
            <Setter Property="FontSize" Value="{Binding FontSize}"/>
            <Setter Property="TextTransform" Value="Uppercase"/>
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">

        <Entry 
            Placeholder="Font size"
            Text="{Binding FontSize}"/>

        <Button
            x:Name="SaveStyle"
            Text="Save"
            Command="{Binding SaveStyleCommand}"/>

        <Label
            Text="Font Preview"
            Style="{StaticResource FontPreview}"/>

        <Label
            Text="{Binding CurrentBook.name}"
            Style="{StaticResource FontPreview}"/>

        <Entry
            Placeholder="Digite o nome ou apelido do livro"
            Text="{Binding AbbrevOrNameToSearch}"/>
        <Entry
            Placeholder="Versículo"
            Text="{Binding VerseToStart}"/>
        <Button
            x:Name="GetBookTest"
            Text="Buscar"
            Command="{Binding GetBookCommand}"/>
        
    </VerticalStackLayout>
</ContentPage>
